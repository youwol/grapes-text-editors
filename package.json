{
  "name": "@youwol/grapes-text-editors",
  "version": "0.0.1",
  "description": "Various components for grapes to edit text (markdown, latex, etc) from YouWol team",
  "author": "",
  "keywords": [],
  "homepage": "https://github.com/youwol/grapes-text-editors#README.md",
  "main": "dist/@youwol/grapes-text-editors.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "yarn build:dev",
    "build:dev": "del-cli dist && webpack --mode development",
    "build:prod": "del-cli dist && webpack --mode production",
    "test": "jest -c ./jest.config.js -i --rootDir .",
    "test-coverage": "jest -c ./jest.config.js -i --rootDir . --collect-coverage --collectCoverageFrom=./src/lib/**/*.ts ",
    "doc": "typedoc src/ --exclude src/index.ts --exclude src/tests --out dist/docs --theme default",
    "publish-npm-public": "yarn build:prod && yarn test-coverage && yarn publish --access public"
  },
  "dependencies": {
  },
  "peerDependencies": {
    "@youwol/http-clients": "^0.1.10",
    "@youwol/cdn-client": "^0.1.3",
    "@youwol/fv-group": "^0.1.1",
    "@youwol/fv-tabs": "^0.1.2"
  },
  "devDependencies": {
    "brotli": "^1.3.2",
    "del-cli": "^4.0.1",
    "@types/node": "14.14.37",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "grapesjs": "0.18.3",
    "@youwol/flux-view": "^0.1.1",
    "@youwol/http-clients": "^0.1.10",
    "@youwol/cdn-client": "^0.1.3",
    "@youwol/fv-group": "^0.1.1",
    "@youwol/fv-tabs": "^0.1.2",
    "rxjs": "6.x",
    "eslint": "7.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-unused-imports": "^1.1.5",
    "prettier": "^2.4.1",
    "isomorphic-fetch": "^3.0.0",
    "prettier-plugin-properties": "^0.1.0",
    "ts-lib": "0.0.5",
    "typescript": "4.2.3",
    "webpack": "5.28.0",
    "webpack-cli": "4.6.0",
    "ts-loader": "8.1.0",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "ts-jest": "26.5.4",
    "@types/jest": "26.0.22",
    "typedoc": "0.20.34",
    "webpack-bundle-analyzer": "4.5.0"
  },
  "youwol": {
    "pipeline": {
      "name": "yw_pipeline_webpack_ts",
      "version": "0.0.0"
    },
    "cdnDependencies": {
      "@youwol/http-clients": "^0.1.10",
      "@youwol/cdn-client": "^0.1.3",
      "@youwol/fv-group": "^0.1.1",
      "@youwol/fv-tabs": "^0.1.2"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "rangeStart": 0,
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "keySeparator": "="
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "/dist/",
      "/coverage/"
    ],
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:eslint-comments/recommended",
      "plugin:import/recommended",
      "prettier"
    ],
    "rules": {
      "eslint-comments/require-description": [
        "error"
      ],
      "eslint-comments/no-unused-disable": [
        "error"
      ],
      "curly": [
        "error"
      ],
      "no-irregular-whitespace": [
        "error",
        {
          "skipComments": true,
          "skipTemplates": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "webpack.config.js",
          "jest.config.js"
        ],
        "env": {
          "node": true
        }
      },
      {
        "files": [
          "*.ts"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:import/typescript"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "tsconfigRootDir": "./",
          "project": [
            "./tsconfig.json"
          ]
        },
        "plugins": [
          "unused-imports",
          "@typescript-eslint"
        ],
        "rules": {
          "@typescript-eslint/no-namespace": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "unused-imports/no-unused-imports": "error",
          "unused-imports/no-unused-vars": [
            "warn",
            {
              "vars": "all",
              "varsIgnorePattern": "^_",
              "args": "after-used",
              "argsIgnorePattern": "^_"
            }
          ],
          "@typescript-eslint/no-unnecessary-type-assertion": "error"
        }
      },
      {
        "files": [
          "*.test.ts"
        ],
        "extends": [
          "plugin:jest/recommended",
          "plugin:jest/style"
        ],
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/expect-expect": [
            "error",
            {
              "assertFunctionNames": [
                "expect",
                "verify"
              ]
            }
          ]
        }
      }
    ],
    "noInlineConfig": false,
    "reportUnusedDisableDirectives": true
  }
}
